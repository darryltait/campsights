<%- include('../partials/header') %>
<header class="container" id="new">
  <h2>Edit <%=campground.cgName%></h2>

  <form
    id="info"
    action="/campgrounds/<%=campground._id%>?_method=PUT"
    method="POST"
  >
    <label class="label-text" for="details">Edit Details</label>
    <textarea
      class="input-text"
      name="details"
      id="details"
      cols="30"
      rows="10"
      max-length="300"
      ;
    >
<%=campground.details%></textarea
    >
    <label class="label-text" for="imageURL">Edit Image URL</label>
    <input
      class="input-text"
      type="text"
      name="imageURL"
      value="<%=campground.imageURL%>"
    />

    <button class="edit-add-btn" type="submit">Save Change</button>
  </form>
</header>

<%- include('../partials/footer') %>
